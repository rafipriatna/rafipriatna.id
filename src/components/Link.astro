---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  group?: boolean;
  class?: string;
};

const {
  href,
  external,
  underline = true,
  group = false,
  class: className,
  ...rest
} = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  rel={external ? "noopener noreferrer" : undefined}
  class={cn(
    "inline-block text-current transition-colors duration-200",
    underline 
      ? "border-b border-accent/20 hover:border-accent/60 hover:text-accent" 
      : "hover:text-accent",
    group && "group",
    className
  )}
  {...rest}
>
  <slot />
</a>
