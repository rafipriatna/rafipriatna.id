---
interface Props {
  type?: "default" | "info" | "warning" | "error";
}

const { type = "default" } = Astro.props as Props;

const styles = {
  default: "border-accent/30 bg-accent/5 text-accent",
  info: "border-blue-500/30 bg-blue-500/5 text-blue-400",
  warning: "border-yellow-500/30 bg-yellow-500/5 text-yellow-400",
  error: "border-red-500/30 bg-red-500/5 text-red-400",
};

const icons = {
  default: ">",
  info: "i",
  warning: "!",
  error: "x",
};
---

<div class={`not-prose flex items-start gap-3 rounded-md border p-4 my-6 text-sm ${styles[type]}`}>
  <span class="font-mono text-xs mt-0.5 shrink-0 opacity-70">[{icons[type]}]</span>
  <div class="text-text-secondary text-[15px] leading-relaxed">
    <slot />
  </div>
</div>
