---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";

const { entry } = Astro.props as {
  entry: CollectionEntry<"blog"> | CollectionEntry<"writeups"> | CollectionEntry<"notes">;
};
---

<a
  href={`/${entry.slug}`}
  class="group flex items-baseline justify-between gap-4 py-2.5 text-sm transition-colors duration-200 hover:text-accent border-b border-surface-border/30 last:border-0"
>
  <span class="text-text-primary group-hover:text-accent transition-colors duration-200 truncate font-medium">
    {entry.data.title}
  </span>
  <span class="text-xs text-text-muted font-mono shrink-0 tabular-nums">
    <FormattedDate date={entry.data.date} />
  </span>
</a>
