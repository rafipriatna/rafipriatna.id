---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
import BackToTop from "@components/BackToTop.astro";
import Link from "./Link.astro";
---

<!-- Mobile Navigation: lebih besar, tema switcher di bar agar tidak tertutup -->
<div
  class="fixed z-40 bottom-0 left-0 right-0 bg-base/95 backdrop-blur-sm border-t border-surface-border/50 md:hidden py-3 px-3"
>
  <div class="flex items-center justify-between gap-2 max-w-lg mx-auto">
    <nav class="flex items-center justify-around flex-1 min-w-0">
      <Link
        href="/blog"
        underline={false}
        class="text-sm font-mono text-text-muted hover:text-accent transition-colors duration-200 uppercase tracking-wider py-2 px-1"
      >blog</Link>
      <Link
        href="/notes"
        underline={false}
        class="text-sm font-mono text-text-muted hover:text-accent transition-colors duration-200 uppercase tracking-wider py-2 px-1"
      >notes</Link>
      <Link
        href="/writeups"
        underline={false}
        class="text-sm font-mono text-text-muted hover:text-accent transition-colors duration-200 uppercase tracking-wider py-2 px-1"
      >writeups</Link>
      <Link
        href="/me"
        underline={false}
        class="text-sm font-mono text-text-muted hover:text-accent transition-colors duration-200 uppercase tracking-wider py-2 px-1"
      >about</Link>
    </nav>
    <div class="flex items-center gap-0.5 shrink-0 border-l border-surface-border/50 pl-2 ml-1" aria-label="Tema">
      <button
        data-theme="light"
        aria-label="Light theme"
        class="theme-toggle flex size-9 items-center justify-center rounded text-text-muted hover:text-accent transition-colors duration-200"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
      </button>
      <button
        data-theme="dark"
        aria-label="Dark theme"
        class="theme-toggle flex size-9 items-center justify-center rounded text-text-muted hover:text-accent transition-colors duration-200"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
      </button>
      <button
        data-theme="system"
        aria-label="System theme"
        class="theme-toggle flex size-9 items-center justify-center rounded text-text-muted hover:text-accent transition-colors duration-200"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect><line x1="8" y1="21" x2="16" y2="21"></line><line x1="12" y1="17" x2="12" y2="21"></line></svg>
      </button>
    </div>
  </div>
</div>

<footer>
  <Container>
    <div class="relative">
      <div class="absolute -top-10 right-0">
        <BackToTop />
      </div>
    </div>
    <div class="flex flex-col md:flex-row items-center justify-between gap-3">
      <div class="text-text-muted font-mono text-xs">
        &copy; {new Date().getFullYear()} {SITE.TITLE}
      </div>
      <div class="flex items-center gap-2 hidden md:flex">
        <button
          id="light-theme-button"
          data-theme="light"
          aria-label="Light theme"
          class="theme-toggle flex size-7 items-center justify-center rounded text-text-muted hover:text-accent transition-colors duration-200"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
        </button>
        <button
          id="dark-theme-button"
          data-theme="dark"
          aria-label="Dark theme"
          class="theme-toggle flex size-7 items-center justify-center rounded text-text-muted hover:text-accent transition-colors duration-200"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
        <button
          id="system-theme-button"
          data-theme="system"
          aria-label="System theme"
          class="theme-toggle flex size-7 items-center justify-center rounded text-text-muted hover:text-accent transition-colors duration-200"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
        </button>
      </div>
    </div>
  </Container>
</footer>
