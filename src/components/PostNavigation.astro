---
const { prevPost, nextPost } = Astro.props;
---

<div class="flex flex-col sm:flex-row items-start justify-between gap-6">
  {
    prevPost?.slug ? (
      <a
        href={"/" + prevPost?.slug}
        class="group text-left"
      >
        <span class="text-xs font-mono text-text-muted block mb-1">&larr; prev</span>
        <span class="text-sm text-text-secondary group-hover:text-accent transition-colors duration-200 line-clamp-1">
          {prevPost?.data.title}
        </span>
      </a>
    ) : (
      <div />
    )
  }

  {
    nextPost?.slug ? (
      <a
        href={"/" + nextPost?.slug}
        class="group text-right sm:ml-auto"
      >
        <span class="text-xs font-mono text-text-muted block mb-1">next &rarr;</span>
        <span class="text-sm text-text-secondary group-hover:text-accent transition-colors duration-200 line-clamp-1">
          {nextPost?.data.title}
        </span>
      </a>
    ) : (
      <div />
    )
  }
</div>
