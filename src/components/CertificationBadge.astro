---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type Props = {
  name: string;
  logo?: ImageMetadata;
  url?: string;
  alt?: string;
};

const { name, logo, url, alt = `${name} certification` } = Astro.props;
---

{url ? (
  <a href={url} target="_blank" rel="noopener noreferrer" class="inline-block">
    <div class="flex items-center gap-2 py-1 transition-colors duration-200 group">
      {logo ? (
        <Image
          src={logo}
          alt={alt}
          width={32}
          height={32}
          class="object-contain opacity-80 group-hover:opacity-100 transition-opacity"
        />
      ) : (
        <span class="text-accent font-mono text-xs">{name}</span>
      )}
    </div>
  </a>
) : (
  <div class="flex items-center py-1">
    {logo ? (
      <Image
        src={logo}
        alt={alt}
        width={32}
        height={32}
        class="object-contain opacity-80"
      />
    ) : (
      <span class="text-accent font-mono text-xs">{name}</span>
    )}
  </div>
)}
